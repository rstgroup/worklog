.container
  .client-add-project-container.clients_wrapper
    .row
      .pull-left
        h3= @client.name
        br
        .grey-text-color
          = link_to "Klienci", backend_clients_path, class: 'link-to-clients'
          |  / 
          = @client.name
      .pull-right
        = render :partial => "backend/projects/form", :locals => {:client => @client}
.container
  .row
    .col-md-12
      .projects_wrapper.border-bot.p-b-30
        = render @client.projects

.timelogs-container
  .container.p-t-20
    .col-md-6
      | Wpisy czasowe
    .col-md-6
      .btn-group.f-right
        .select-workers-btn.dropdown-toggle.p-t-8
          | Pracownicy
          i.fa.fa-caret-down.p-l-5
        ul.dropdown-menu.clearfix
          li
            = link_to backend_client_path(@client) do
              | Wszyscy
              - if params[:sort]
                i.icon-circle-blank
              - else
                i.icon-circle
          - current_user.account.users.each do |user|
            li
              = link_to backend_client_path(@client, sort: {user_id: user.id}) do
                = user.name
                - if params[:sort] and user.id == params[:sort][:user_id].to_i
                  i.icon-circle
                - else
                  i.icon-circle-blank
    .clearfix
    .col-md-12
      - @last_day = nil
      .text-right= will_paginate @timelogs, :renderer => BootstrapPagination::Rails, previous_label: "Poprzednia strona", next_label: "NastÄ™pna strona"
      = render @timelogs
